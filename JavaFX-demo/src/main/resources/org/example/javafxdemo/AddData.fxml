<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.javafxdemo.AddDataController" spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    <Label text="Add New Data" style="-fx-font-size: 18px;" />

    <TextField fx:id="titleField" promptText="Enter title" />
    <TextField fx:id="loginField" promptText="Enter login" />
    <PasswordField fx:id="passwordField" promptText="Enter password" />

    <HBox spacing="10" alignment="CENTER">
        <Button text="Cancel" onAction="#handleCancel" />
        <Button text="Add" onAction="#handleAdd" />
    </HBox>
</VBox>

